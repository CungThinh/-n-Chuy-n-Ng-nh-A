// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String 
  fullName String
  birthday  DateTime
  phoneNumber String @unique
  role String @default("USER")

  bookings Booking[]
}

model Booking {
  id                 Int       @id @default(autoincrement()) // ID tự tăng
  userId             Int                                      // Liên kết tới bảng User
  flightId           Int                                      // Liên kết tới bảng Flight
  bookingDate        DateTime  @default(now())                // Ngày đặt vé
  paymentStatus      String @default("PENDING")          // Trạng thái thanh toán
  status             String @default("BOOKED")           // Trạng thái đặt vé (BOOKED, CANCELLED)

  user               User      @relation(fields: [userId], references: [id])
}